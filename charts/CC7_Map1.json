{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Choropleth map of Wales showing 2023 population density by Local Authority District.",
  "title": "Wales Population Density by Local Authority (2023)",
  "width": 350,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/MappingWorkshop/geo_data/LAD_WLS_2025_05.topojson",
    "format": {"type": "topojson", "feature": "object_name"}
  },
  "transform": [
    {
      "lookup": "properties.LAD25CD",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/tpunamiya/tpunamiya.github.io/refs/heads/main/data/wales_pop.csv"
        },
        "key": "geo_id",
        "fields": ["value"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "value",
      "type": "quantitative",
      "scale": {"scheme": "oranges"},
      "title": "Density (per kmÂ²)"
    },
    "tooltip": [
      {"field": "properties.LAD25NM", "type": "nominal", "title": "Local Authority"},
      {"field": "value", "type": "quantitative", "title": "Population Density", "format": ",.1f"}
    ]
  },
  "projection": {
    "type": "mercator"
  }
}