{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Gender Gap in School Enrollment by State",
    "fontSize": 16,
    "subtitle": "Percentage point difference (Girls % - Boys %), 2022-2024",
    "subtitleFontSize": 11
  },
  "width": 650,
  "height": 700,
  "params": [
    {
      "name": "yearSelect",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2022,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/tpunamiya/tpunamiya.github.io/refs/heads/main/charts/gender_gap_by_state.json"
  },
  "transform": [
    {
      "filter": "datum.year == yearSelect"
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "state",
          "type": "nominal",
          "axis": null,
          "sort": {"field": "gender_gap", "order": "ascending"}
        },
        "x": {
          "field": "gender_gap",
          "type": "quantitative",
          "axis": {
            "title": "Gender Gap (percentage points)",
            "grid": false,
            "format": "d"
          },
          "scale": {"domain": [-8, 8]}
        },
        "color": {
          "field": "gender_gap",
          "type": "quantitative",
          "scale": {
            "domain": [-8, 0, 8],
            "range": ["#77ba99", "#E0E0E0", "#ba7798"]
          },
          "legend": {
            "title": "Gender Gap (pp)",
            "orient": "bottom",
            "direction": "horizontal",
            "gradientLength": 300
          }
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "year", "type": "quantitative", "title": "Year"},
          {
            "field": "total_boys",
            "type": "quantitative",
            "title": "Total Boys",
            "format": ","
          },
          {
            "field": "total_girls",
            "type": "quantitative",
            "title": "Total Girls",
            "format": ","
          },
          {
            "field": "girls_percentage",
            "type": "quantitative",
            "title": "Girls %",
            "format": ".2f"
          },
          {
            "field": "boys_percentage",
            "type": "quantitative",
            "title": "Boys %",
            "format": ".2f"
          },
          {
            "field": "gender_gap",
            "type": "quantitative",
            "title": "Gender Gap (pp)",
            "format": "+.2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": {"expr": "datum.gender_gap < 0 ? 'right' : 'left'"},
        "dx": {"expr": "datum.gender_gap < 0 ? -5 : 5"},
        "fontSize": 10
      },
      "encoding": {
        "y": {
          "field": "state",
          "type": "nominal",
          "sort": {"field": "gender_gap", "order": "ascending"}
        },
        "x": {
          "field": "gender_gap",
          "type": "quantitative"
        },
        "text": {
          "field": "state",
          "type": "nominal"
        }
      }
    }
  ],
  "config": {
    "mark": {
      "fontCapitalize": "none"
    },
    "text": {
      "fontCapitalize": "none"
    }
  }
}