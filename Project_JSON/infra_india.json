{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "School Infrastructure Index by State (2022-2024)",
    "fontSize": 16,
    "subtitle": "Composite score: Electricity, Internet, Libraries, Girls' toilets",
    "subtitleFontSize": 11
  },
  "width": 600,
  "height": 700,
  "params": [
    {
      "name": "year_select",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2022,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/tpunamiya/tpunamiya.github.io/refs/heads/main/charts/state_infrastructure_2021_2024.json"
  },
  "transform": [
    {
      "filter": "datum.year == year_select"
    },
    {
      "lookup": "state",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/rheapy/rheapy.github.io/refs/heads/main/India_states.json",
          "format": {"type": "json", "property": "features"}
        },
        "key": "properties.name",
        "fields": ["type", "properties", "geometry"]
      }
    },
    {
      "filter": "datum.geometry != null"
    }
  ],
  "projection": {"type": "mercator"},
  "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1.5},
  "encoding": {
    "color": {
      "field": "infrastructure_index",
      "type": "quantitative",
      "scale": {
        "range": ["#E8F5E9", "#77ba99", "#2f4a3d"],
        "domain": [30, 65, 100]
      },
      "legend": {
        "title": "Infrastructure Index (%)",
        "orient": "right",
        "direction": "vertical",
        "gradientLength": 300
      }
    },
    "tooltip": [
      {"field": "state", "type": "nominal", "title": "State"},
      {"field": "year", "type": "quantitative", "title": "Year"},
      {
        "field": "infrastructure_index",
        "type": "quantitative",
        "title": "Overall Index",
        "format": ".1f"
      },
      {
        "field": "pct_electricity_functional",
        "type": "quantitative",
        "title": "Electricity %",
        "format": ".1f"
      },
      {
        "field": "pct_internet",
        "type": "quantitative",
        "title": "Internet %",
        "format": ".1f"
      },
      {
        "field": "pct_library",
        "type": "quantitative",
        "title": "Library %",
        "format": ".1f"
      },
      {
        "field": "pct_girls_toilets",
        "type": "quantitative",
        "title": "Girls' Toilets %",
        "format": ".1f"
      }
    ]
  },
  "config": {}
}